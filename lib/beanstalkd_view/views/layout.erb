<!doctype html>

<html>
  <head>
    <title>Beanstalkd View - <%= BeanstalkdView::VERSION %></title>
    <meta http-equiv="content-type" content="text/html;charset=utf-8" />
    <link rel="stylesheet" type="text/css" href="<%= "#{path_prefix}/css/beanstalkd_view.min.css" %>">
    <script type="text/javascript" src="<%= "#{path_prefix}/js/beanstalkd_view.min.js" %>"></script>
  </head>
  <body>
	<!-- Header -->
	<div class="navbar">
	  <div class="navbar-inner">
	    <div class="container">
			<a class="brand" href="<%= u("/") %>">Beanstalkd View - <%= BeanstalkdView::VERSION %></a>
      <form action="<%= u("/change_connection") %>" method="POST" class="brand">
        <select id="connection-select" name="beanstalk">
          <% @beanstalk_urls.each do |url| %>
            <option value="<%= url %>" <%= (url == cookies[:beanstalk]) ? "selected" : "" %>><%= url %></option>
          <% end %>
        </select> 
        <button type='submit'>go</button>
      </form>
		  </div>
	  </div>
	</div>
	
	<div class="container">
		
		<% message = notice_message %>
		<% if message and not message.empty? %>
			<div id='flash' class='notice'>
				<div class="row">
					<div class="span12">
						<div class="alert alert-success">
						 <h4 class="alert-heading">Notice:</h4>
						  <%= message %>
						</div>
					</div>
				</div>		
			</div>
		<% end %>
		
		<%= yield %>


		<!-- Footer -->
		<div class="row">
			<div class="span12"><hr/></div>
		</div>		
		<div class="row">
 		  <div class="span4">&nbsp;</div>
		  <div class="span4">
		      Powered by <a href="http://github.com/denniskuczynski/beanstalkd_view">Beanstalkd View</a>
		  </div>
 		  <div class="span4">&nbsp;</div>
		</div>
	</div>
  </body>
</html>
